!!! XML
!!!
%html
  %head
    %title= conf.title
    %meta{'http-equiv' => 'Content-Script-Type', :content => 'text/javascript'}
    %meta{'http-equiv' => 'Content-Style-Type', :content => 'text/css'}
    %meta{'http-equiv' => 'content-type', :content => 'text/html; charset=utf-8'}
    %meta{'http-equiv' => 'expires', :content => '0'}
    %meta{:name => 'description', :content => 'Job listing'}
    %meta{:name => 'generator', :content => "Ramaze #{Ramaze::VERSION}"}
    %meta{:name => 'keywords', :content => 'Job listing'}
    %meta{:name => 'author', :content => conf.title}
    %meta{:name => 'date', :content => Time.now.iso8601}
    = css('screen')
  %body
    .top
      .title
        %a{:href => '/'}
          %img{:src => '/logo.png', :alt => conf.title}
      .menu
        .auth
          - if logged_in?
            Logged in as
            = user.role.capitalize
            = UserController.a(user.public_name, :read)
            = UserController.a('Logout', :logout)
          - else
            = UserController.a('Join', :join)
            = UserController.a('Login', :login)
        .nav
          %a{:href => JobController.r(:browse)} Browse jobs
          - if logged_in?
            = UserController.a('Profile', :read)
            - if user.admin?
              .admin
                %span.section
                  %b Applicant
                  = ResumeController.a 'Resumes'
                  = ApplicationController.a 'Applications'
                %span.section
                  %b Recruiter
                  = ApplicationController.a 'Applications'
                  = CompanyController.a 'Company', :edit
                  = JobController.a 'Jobs', :manage
                %span.section
                  %b Admin
                  = StatController.a 'Statistics'
                  = UserController.a 'Users', :list
            - elsif user.recruiter?
              = ApplicationController.a 'Applications'
              = CompanyController.a 'Company', :edit
              = JobController.a 'Jobs', :manage
            - elsif user.applicant?
              = ResumeController.a 'Resumes'
              = ApplicationController.a 'Applications'

    .middle
      .content
        = @content
      .sidebar
        = flashbox("<div class='section'><p class='flash-%key'>%value</p></div>")
        .section
          %form{:action => SearchController.r}
            %fieldset
              %label{:for => :search}
                %h4 Search for a job
              %input{:type => :hidden, :name => :only, :value => request[:only] || :any}
              %input{:type => :text, :id => :search, :name => :q, :value => request[:q]}
        - if user.recruiter?
          .section
            %form{:action => SearchController.r(:resume)}
              %fieldset
                %label{:for => :search_resume}
                  %h4 Search for a Resume
                %input{:type => :text, :id => :search_resume, :name => :resume, :value => request[:resume]}
        = part(:sidebar)

    .bottom
      %a{:href => '/help'} Help
      %a{:href => '/contact'} Contact
      %a{:href => '/tos#privacy'} Privacy Policy
      %a{:href => '/tos'} Terms of Service
      %br/
