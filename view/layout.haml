!!! XML
!!!
%html
  %head
    %title= conf.title
    = css('screen')
  %body
    .top
      %a{:href => '/'}
        %h1= conf.title
      .menu
        .auth
          - if logged_in?
            Logged in as
            %a{:href => R(UserController, :profile)}= user.public_name
            %a{:href => R(UserController, :logout)} Logout
          - else
            %a{:href => R(UserController, :join)} Join
            %a{:href => R(UserController, :login)} Login
        .nav
          %a{:href => R(JobController, :browse)} Browse jobs
          - if logged_in?
            %a{:href => R(UserController, :profile)} Profile
            %a{:href => R(CVController)} CVs
            %a{:href => R(ApplicationController)} Applications
            %a{:href => R(CompanyController, :edit)} Company
            %a{:href => R(JobController, :manage)} Jobs    

    .middle
      .content
        = @content
      .sidebar
        = flashbox("<div class='section'><p class='flash-%key'>%value</p></div>")
        .section
          %form{:action => R(SearchController)}
            %fieldset
              %label{:for => :search}
                %h4 Search for a job
              %input{:type => :hidden, :name => :only, :value => request[:only] || :any}
              %input{:type => :text, :id => :search, :name => :q, :value => request[:q]}
        .section
          %form{:action => R(SearchController, :cv)}
            %fieldset
              %label{:for => :search_cv}
                %h4 Search for a CV
              %input{:type => :text, :id => :search_cv, :name => :cv, :value => request[:cv]}
        = part(:sidebar)

    .bottom
      %a{:href => '/help'} Help
      %a{:href => '/contact'} Contact
      %a{:href => '/privacy_policy'} Privacy Policy
      %a{:href => '/tos'} Terms of Use
